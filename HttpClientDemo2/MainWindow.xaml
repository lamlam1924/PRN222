<!-- ===== ĐỊNH NGHĨA CỬA SỔ CHÍNH (MAIN WINDOW) ===== -->
<!-- Window = cửa sổ ứng dụng WPF -->
<!-- Title = tiêu đề trên thanh title bar -->
<!-- Height/Width = kích thước cửa sổ (pixels) -->
<Window x:Class="HttpClientDemo2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HttpClientDemo2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <!-- ===== GRID LAYOUT - BỐ CỤC CHÍNH ===== -->
    <!-- Grid = bảng để sắp xếp các controls theo hàng/cột -->
    <!-- Background = màu nền -->
    <Grid Background="LightBlue" >
        
        <!-- ===== ĐỊNH NGHĨA 3 HÀNG (ROWS) ===== -->
        <Grid.RowDefinitions>
            <!-- Hàng 0: Chiều cao tự động (Auto) - chứa URL input -->
            <RowDefinition Height="Auto"></RowDefinition>
            
            <!-- Hàng 1: Chiều cao co dãn (*) - chiếm hết không gian còn lại -->
            <!-- Chứa TextBox hiển thị HTML -->
            <RowDefinition Height="*"></RowDefinition>
            
            <!-- Hàng 2: Chiều cao tự động (Auto) - chứa các buttons -->
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        
        <!-- ===== HÀNG 0: PHẦN NHẬP URL ===== -->
        <!-- StackPanel = xếp các controls theo chiều dọc (Vertical) hoặc ngang (Horizontal) -->
        <!-- Mặc định nằm ở Grid.Row="0" (không cần khai báo) -->
        <StackPanel VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Orientation="Vertical">
            
            <!-- Label hiển thị chữ "URL" -->
            <Label Name="lblURL" Content="URL"/>
            
            <!-- TextBox để người dùng nhập URL -->
            <!-- Text = giá trị mặc định -->
            <TextBox Name="txtURL" Text="http://www.contoso.com" Height="25" />
            
            <!-- Label hiển thị chữ "HTML Source" -->
            <Label Name="lbContent" Content="HTML Source" />
        </StackPanel>
        
        <!-- ===== HÀNG 1: TEXTBOX HIỂN THỊ HTML ===== -->
        <!-- Grid.Row="1" = đặt control này vào hàng thứ 1 -->
        <!-- TextWrapping="Wrap" = tự động xuống dòng khi text dài -->
        <!-- AcceptsReturn="True" = cho phép nhập nhiều dòng (Enter) -->
        <!-- ScrollBar = thanh cuộn khi nội dung quá dài -->
        <TextBox Grid.Row="1" Name="txtContent" TextWrapping="Wrap"
                 HorizontalScrollBarVisibility="Auto"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Visible" />
        
        <!-- ===== HÀNG 2: CÁC NÚT BUTTON ===== -->
        <!-- Grid.Row="2" = đặt vào hàng thứ 2 -->
        <!-- Orientation="Horizontal" = xếp các button theo chiều ngang -->
        <!-- HorizontalAlignment="Center" = căn giữa theo chiều ngang -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top" >
            
            <!-- Button "View HTML" -->
            <!-- Click="btnViewHTML_Click" = khi click, gọi hàm btnViewHTML_Click trong file .cs -->
            <!-- Margin = khoảng cách xung quanh button (trái/phải: 25px, trên/dưới: 5px) -->
            <Button x:Name="btnViewHTML" Margin="25,5" Width="80"
                    Content="View HTML" Click="btnViewHTML_Click" />
            
            <!-- Button "Clear" - xóa nội dung HTML -->
            <Button x:Name="btnClear" Margin="25,5" Width="80"
                    Content="Clear" Click="btnClear_Click"/>
            
            <!-- Button "Close" - đóng cửa sổ -->
            <Button x:Name="btnClose" Margin="25,5"
                    Width="80" Content="Close" Click="btnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
